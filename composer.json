{
    "name": "tomaj/omnipay-viamo",
    "type": "library",
    "description": "Viamo driver for the Omnipay payment processing library",
    "keywords": [
        "viamo",
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment"
    ],
    "homepage": "https://github.com/tomaj/omnipay-viamo",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomas Majer",
            "email": "tomasmajer@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { 
            "Omnipay\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-openssl": "*",
        "ext-hash": "*",
        "omnipay/common": "~3.0",
        "endroid/qr-code": "^5.0"
    },
    "require-dev": {
        "omnipay/tests": "~4.0"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
